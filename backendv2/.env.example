# Google Sheets Configuration
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email_here

# Get these from Google Cloud Console after creating service account
# Instructions in README.md

# Job API Keys (V2: More sources for higher volume)
# Adzuna - FREE 1,000 calls/month - Get from https://developer.adzuna.com
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key

# Jooble - FREE 500 requests/day - Get from https://jooble.org/api/about
JOOBLE_API_KEY=your_jooble_api_key

# Optional: JSearch (RapidAPI) - $30/month for premium volume
# JSEARCH_API_KEY=your_jsearch_api_key

# Optional: Careerjet - FREE with attribution
# CAREERJET_API_KEY=your_careerjet_api_key

# Your business info
YOUR_CONTACT_EMAIL=youremail@example.com
YOUR_BUSINESS_NAME=RoadmapCareers

# Gmail OAuth (for accessing your workspace email)
# Get these from Google Cloud Console OAuth credentials
GMAIL_CLIENT_ID=your_gmail_oauth_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_gmail_oauth_client_secret
GMAIL_REDIRECT_URI=http://localhost:3000/oauth/callback

# Server
PORT=3001  # V2 uses different port than V1
NODE_ENV=development  # 'development' or 'production' - affects email cron interval

# Stripe Payment Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe URLs (update for production)
# Development:
STRIPE_SUCCESS_URL=http://localhost:5174/certification/result
STRIPE_CANCEL_URL=http://localhost:5174/certification
# Production: https://v2.roadmapcareers.com/certification/result and /certification

# Frontend URL (for email templates)
# Development: http://localhost:5174 (V2 frontend)
# Production: https://v2.roadmapcareers.com
FRONTEND_URL=http://localhost:5174